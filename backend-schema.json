{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Py-Swift/PSProject/backend-schema.json",
  "title": "PySwift Backend Configuration",
  "description": "Schema for PySwift backend YAML configuration files",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the backend"
    },
    "dependencies": {
      "type": "array",
      "description": "List of other backend dependencies",
      "items": {
        "type": "string"
      }
    },
    "backend_dependencies": {
      "type": "array",
      "description": "List of backend dependencies",
      "items": {
        "type": "string"
      }
    },
    "exclude_dependencies": {
      "type": "array",
      "description": "List of dependencies to exclude",
      "items": {
        "type": "string"
      }
    },
    "downloads": {
      "type": "array",
      "description": "URLs of files to download",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "frameworks": {
      "type": "array",
      "description": "List of framework paths (can use ${PS_SUPPORT} variable)",
      "items": {
        "type": "string"
      }
    },
    "target_dependencies": {
      "type": "array",
      "description": "Dependencies to add to the Xcode target",
      "items": {
        "type": "object",
        "required": ["type", "reference"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["framework", "package"],
            "description": "Type of dependency"
          },
          "reference": {
            "type": "string",
            "description": "Path or package name reference"
          },
          "products": {
            "type": "array",
            "description": "Product names for package dependencies",
            "items": {
              "type": "string"
            }
          },
          "platformFilter": {
            "type": "string",
            "enum": ["iOS", "macOS", "tvOS", "watchOS", "visionOS"],
            "description": "Platform filter for the dependency"
          }
        }
      }
    },
    "packages": {
      "type": "object",
      "description": "Swift Package Manager packages to add",
      "patternProperties": {
        ".*": {
          "type": "object",
          "oneOf": [
            {
              "required": ["url"],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Git URL of the package"
                },
                "revision": {
                  "type": "string",
                  "description": "Git commit hash"
                },
                "branch": {
                  "type": "string",
                  "description": "Git branch name"
                },
                "exactVersion": {
                  "type": "string",
                  "description": "Exact semantic version"
                },
                "versionRange": {
                  "type": "object",
                  "description": "Version range specification",
                  "required": ["minimumVersion", "maximumVersion"],
                  "properties": {
                    "minimumVersion": {
                      "type": "string",
                      "description": "Minimum version"
                    },
                    "maximumVersion": {
                      "type": "string",
                      "description": "Maximum version"
                    }
                  }
                },
                "upToNextMinorVersion": {
                  "type": "string",
                  "description": "Up to next minor version from specified version"
                },
                "upToNextMajorVersion": {
                  "type": "string",
                  "description": "Up to next major version from specified version"
                },
                "versionRequirement": {
                  "type": "object",
                  "description": "Version requirement specification (legacy)",
                  "oneOf": [
                    {
                      "required": ["branch"],
                      "properties": {
                        "branch": {
                          "type": "string",
                          "description": "Git branch name"
                        }
                      }
                    },
                    {
                      "required": ["version"],
                      "properties": {
                        "version": {
                          "type": "string",
                          "description": "Semantic version"
                        }
                      }
                    },
                    {
                      "required": ["revision"],
                      "properties": {
                        "revision": {
                          "type": "string",
                          "description": "Git commit hash"
                        }
                      }
                    }
                  ]
                }
              },
              "additionalProperties": false
            },
            {
              "required": ["path"],
              "properties": {
                "path": {
                  "type": "string",
                  "description": "Local path to the package"
                }
              },
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "wrapper_imports": {
      "type": "object",
      "description": "Import configurations for wrapper code generation",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "libraries": {
              "type": "array",
              "description": "Library names to import",
              "items": {
                "type": "string"
              }
            },
            "modules": {
              "type": "array",
              "description": "Python modules to import",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "install": {
      "oneOf": [
        {
          "type": "object",
          "description": "Single installation script configuration",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["shell"],
              "description": "Type of installation script"
            },
            "shell": {
              "type": "string",
              "enum": ["python", "bash", "zsh", "sh", "ruby", "fish"],
              "description": "Shell/interpreter to use"
            },
            "file": {
              "type": "string",
              "description": "Path to the installation script file"
            },
            "run": {
              "type": "string",
              "description": "Inline script text to execute"
            }
          },
          "oneOf": [
            {
              "required": ["file"]
            },
            {
              "required": ["run"]
            }
          ]
        },
        {
          "type": "array",
          "description": "Multiple installation scripts",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["shell"],
                "description": "Type of installation script"
              },
              "shell": {
                "type": "string",
                "enum": ["python", "bash", "zsh", "sh", "ruby", "fish"],
                "description": "Shell/interpreter to use"
              },
              "file": {
                "type": "string",
                "description": "Path to the installation script file"
              },
              "run": {
                "type": "string",
                "description": "Inline script text to execute"
              }
            },
            "oneOf": [
              {
                "required": ["file"]
              },
              {
                "required": ["run"]
              }
            ]
          }
        }
      ]
    },
    "copy_to_site_packages": {
      "oneOf": [
        {
          "type": "object",
          "description": "Single copy script configuration",
          "required": ["type"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["shell"],
              "description": "Type of script"
            },
            "shell": {
              "type": "string",
              "enum": ["python", "bash", "zsh", "sh", "ruby", "fish"],
              "description": "Shell/interpreter to use"
            },
            "file": {
              "type": "string",
              "description": "Path to the script file"
            },
            "run": {
              "type": "string",
              "description": "Inline script text to execute"
            }
          },
          "oneOf": [
            {
              "required": ["file"]
            },
            {
              "required": ["run"]
            }
          ]
        },
        {
          "type": "array",
          "description": "Multiple copy scripts",
          "items": {
            "type": "object",
            "required": ["type"],
            "properties": {
              "type": {
                "type": "string",
                "enum": ["shell"],
                "description": "Type of script"
              },
              "shell": {
                "type": "string",
                "enum": ["python", "bash", "zsh", "sh", "ruby", "fish"],
                "description": "Shell/interpreter to use"
              },
              "file": {
                "type": "string",
                "description": "Path to the script file"
              },
              "run": {
                "type": "string",
                "description": "Inline script text to execute"
              }
            },
            "oneOf": [
              {
                "required": ["file"]
              },
              {
                "required": ["run"]
              }
            ]
          }
        }
      ]
    },
    "plist_entries": {
      "type": "object",
      "description": "Custom Info.plist entries",
      "additionalProperties": true
    },
    "will_modify_main_swift": {
      "type": "object",
      "description": "Indicates if main.swift will be modified",
      "patternProperties": {
        ".*": {
          "type": "boolean"
        }
      }
    },
    "modify_main_swift": {
      "type": "array",
      "description": "Main.swift modification scripts",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["shell"],
            "description": "Type of script"
          },
          "shell": {
            "type": "string",
            "enum": ["python", "bash", "zsh", "sh", "ruby", "fish"],
            "description": "Shell/interpreter to use"
          },
          "file": {
            "type": "string",
            "description": "Path to the script file"
          },
          "run": {
            "type": "string",
            "description": "Inline script text to execute"
          }
        },
        "oneOf": [
          {
            "required": ["file"]
          },
          {
            "required": ["run"]
          }
        ]
      }
    }
  }
}
